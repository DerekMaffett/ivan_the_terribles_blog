<section class="post">
  <h2><%= post.title %></h2>
  <div><%= post.body %></div>
  <div class="post_nav">
    <%= link_to 'Show', post %> |
    <%= link_to 'Edit', edit_post_path(post) %> |
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
  <%= render post.comments %>
</section>
